<h1>New game</h1>

<ul id="grid">
  <% @letters.each do |letter| %>
    <li class="letter"><%= letter %></li>
  <% end %>
</ul>

<form action="/score" method="post" id="form">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="user-word">What is the longest word you can find?</label><br />
  <div class="inputs">
    <input type="hidden" name="letters" value=<%= @letters.join %>>
    <input type="text" name="user-word" id="user-word">
    <input type="submit" value="Play" id="submit-btn">
  </div>
</form>
